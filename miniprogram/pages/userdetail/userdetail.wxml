<!--pages/userdetail/userdetail.wxml-->
<view class="title">信息修改</view>
<view class="body">
	<view class="item">
		<view class="left iconfont icon--Manager">
			姓名
		</view>
		<input type="text" placeholder="{{name}}" bindinput="handleInputName" />
	</view>
	<view class="item">
		<view class="left iconfont icon-nav_icon_zhiduguanli">
			学号
		</view>
		<input type="text" placeholder="{{id}}" bindinput="handleInputID" />
	</view>
	<view class="item">
		<view class="left iconfont icon-dianhua">
			电话
		</view>
		<input type="text" placeholder="{{phone}}" bindinput="handleInputPhone" />
	</view>
  <view class="item" wx:if="{{mypermission}}">
		<view class="left iconfont icon-quanxian">
			权限
		</view>
		<input type="text" placeholder="{{permission}}" bindinput="handleInputPermission" />
	</view>
	<view class="section">
		<picker header-text="班级" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
			<view class="item">
				<view class="left iconfont icon-banji">
					班级
				</view>
				<view class="picker">
					{{multiArray[0][multiIndex[0]]}}{{multiArray[1][multiIndex[1]]}}
				</view>
			</view>	
		</picker>
	</view>
</view>
<view>
    <button class="blue" bindtap="click">修改</button>
</view>
