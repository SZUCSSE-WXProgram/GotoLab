/* pages/user/user.wxss */
.head{
  height: 500rpx;
  background: linear-gradient(180deg,var(--themecolor),rgb(133, 169, 233));
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 1px solid white;
  box-shadow: 0 1px 5px gray;
}
.name{
  font-size: 17px;
  color: white;
  font-weight: 500;
  margin: 15px;
}
.contain{
  font-size: 13px;
  color: white;
  font-weight:300;

}
navigator{
  height: 50rpx;
  padding: 20rpx;
  background-color:#ffffff;
  align-items: center;
  display: flex;
  border-bottom: 1px solid rgb(238, 238, 238);
}
.itemname{
  flex: 1;
}