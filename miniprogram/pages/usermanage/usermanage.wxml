<!--pages/usermanage/usermanage.wxml-->
<view class="top">
<view class="text">所有用户</view>
<view class="search_row">
  <input value="{{iptvalue}}" placeholder="请输入用户的姓名或学号" bindconfirm="handleInput"></input>
</view>
</view>
<view class="list">
  <view class="head">
    <view class="name weight">
      姓名
    </view>
    <view class="stuid weight">
      学号        
    </view>
  </view>
  <view wx:for="{{users}}"  wx:key="_id" class="head">
    <view class="name font">  
      {{item.name}}
    </view>
    <view class="font">
      {{item.stuid}}
    </view>
	<navigator url="/pages/userdetail/userdetail?name={{item.name}}&permission={{item.permission}}&id={{item.stuid}}&phone={{item.phone}}&_id={{item._id}}">
    <button class="butn">| 编辑</button>
	</navigator>
</view>
</view>