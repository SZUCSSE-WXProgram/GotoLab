/* pages/usermanage/usermanage.wxss */
.top{
  display: flex;
  align-items: center;
  padding: 10rpx;
  margin-left: 10rpx;
  border-bottom: 2rpx solid rgb(220, 220, 220);
  height: 70rpx;
  background-color: white;
}
.text{
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
}
.search_row
{
  height: 60rpx;
  width: 400rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
  border-radius: 20rpx;
  margin: 10rpx;
}
input{
  border-radius: 20rpx;
  height: 100%;
  background: rgb(235, 235, 235);
  font-size: 28rpx;
  padding-left: 30rpx;
}
.list{
  margin-top: 10rpx;
  background-color: white;
}
.head{
  display: flex;
  padding: 10rpx;
  align-items: center;
  margin: 2rpx;
  border-radius: 5rpx;
  border-bottom: 1rpx solid rgb(220, 220, 220);
}
.name{
  flex: 1;
}
.stuid{
  padding-right: 200rpx;
}
.actid{
  padding-right: 300rpx;
}
.font{
  font-size: small;
  font-weight: 400;
  margin: 10rpx;
}
.weight{
	font-weight: 600;
}
.butn{
	height: 60rpx;
	width: 80rpx;
	font-size: 26rpx;
  padding: 0;
  margin-left: 20rpx;
	justify-content: center;
	align-items: center;
  line-height: 60rpx;
  color: white;
  }
  .tabs_title {
    display: flex;
    padding: 10rpx 0;
  }
  .title_item {
    width: 188rpx;
    height: 75rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
  }
  .active {
    color: var(--themecolor);
    border-bottom: 5rpx solid currentColor !important;
  }