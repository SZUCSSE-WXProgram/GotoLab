.grouplist navigator{
  height: 50rpx;
  padding: 20rpx;
  margin: 10rpx;
  background-color:#ffffff;
  border-radius: 15rpx;
  align-items: center;
  display: flex;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.name{
  flex: 1;
}
.title {
  font-size: 40rpx;
  font-weight: 600;
  padding: 10rpx;
  margin-left: 10rpx;
  border-bottom: 2rpx solid rgb(220, 220, 220);
  height: 55rpx;
}
button{
  margin: 30rpx 70rpx;
  color: #fff;
}
.red{
  background-color: rgb(235, 84, 77);
}
.green{
  background-color: rgb(88, 190, 106);
}
.blue{
  background-color: rgb(82, 151, 247);
}