/* pages/classmanage/classmanage.wxss */
.body{
  background-color: white;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.part{
  border-bottom: 2rpx solid rgb(220, 220, 220);
  padding-bottom: 20rpx;
}
.class{
  display: flex;
  flex-wrap: wrap;
}
.item{
  display: flex;
  background-color: white;
  height: 90rpx;
  width: 200rpx;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
  font-size: 30rpx;
}
.grade{
  margin: 20rpx;
  font-size: 34rpx;
  font-weight:500;
  z-index: 99;
}
.ipt{
  margin: 10rpx;
  padding: 20rpx 25rpx;
  display: flex;
  background-color: white;
}
input{
  border-bottom:2rpx solid rgb(235, 234, 234) ;
}
.left{
	width: 150rpx;
}
.width{
  margin-top: 70rpx;
  font-weight: 700;
}



.nav-son{
  font-size: 40rpx;
  font-weight: 600;
  padding: 10rpx;
  padding-right:30rpx ;
  border-bottom: 2rpx solid rgb(220, 220, 220);
  height: 80rpx;
  position: relative;
  /* 让下拉提示信息永远放于下拉内容的上面 */
  z-index: 99;
  background: #fff;
  display: flex;
  align-items: center;
}
/* 下拉框的样式 */
.temp{
  /* 默认为不显示 */
  display:none;
  /* 下拉框的宽度， */
  width: 100%;
  /* 下拉框的最大高度 */
  max-height: 750rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height:100rpx;
  background: #fff;
}

/* 下拉框内容的样式 */
.temp{
  border-bottom: 1px solid #d1d3d4;
  font-size: 14px;
  color: #666;
}

/* 下拉动画 */
/* @keyframes Css3 新标签，循环动画 */

.slidown{
  display: block;
}

.slidup{
  display: block;
  height: 0px;
}
